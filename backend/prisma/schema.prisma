generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  name            String
  password        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  organizedEvents Event[]  @relation("OrganizedBy")
  attendedEvents  Event[]  @relation("AttendedBy")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  color     String   // HEXã‚«ãƒ©ãƒ¼ã‚³ãƒ¼ãƒ‰ï¼ˆä¾‹: #FF5722ï¼‰
  icon      String?  // ã‚¢ã‚¤ã‚³ãƒ³åï¼ˆä¾‹: ğŸµ, ğŸ’», ğŸƒâ€â™‚ï¸ï¼‰
  createdAt DateTime @default(now())
  events    Event[]
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())
  events    Event[]  @relation("EventTags")
}

model Event {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  location     String
  eventDate    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  organizerId  Int
  categoryId   Int?
  organizer    User     @relation("OrganizedBy", fields: [organizerId], references: [id])
  category     Category? @relation(fields: [categoryId], references: [id])
  participants User[]   @relation("AttendedBy")
  tags         Tag[]    @relation("EventTags")
}
